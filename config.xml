<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:cdv   = "http://cordova.apache.org/ns/1.0"
        id          = "Garrafao.mogi.app"
        android-versionCode = "13"
        version     = "1.0.0">

    <name>Garrafão Mogi</name>

    <description>
        APLICATIVO DESENVOLVIDO ESPECIALMENTE PARA REVENDEDORES DE ÁGUA MINERAL.

VENDAS DE GARRAFÕES
10 E 20 LITROS

TROCAS DE VENCIDOS E QUEBRADOS
    </description>

    <author>Tadapp</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name='orientation' value='portrait' />

    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="#4C5446" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon background="res/android/icon/ldpi_1618878029_7b32ee933929fe3ad84b.png" density="ldpi" foreground="res/android/icon/ldpi_1618878029_7b32ee933929fe3ad84b.png" />
        <icon background="res/android/icon/mdpi_1618878029_7b32ee933929fe3ad84b.png" density="mdpi" foreground="res/android/icon/mdpi_1618878029_7b32ee933929fe3ad84b.png" />
        <icon background="res/android/icon/hdpi_1618878029_7b32ee933929fe3ad84b.png" density="hdpi" foreground="res/android/icon/hdpi_1618878029_7b32ee933929fe3ad84b.png" />
        <icon background="res/android/icon/xhdpi_1618878029_7b32ee933929fe3ad84b.png" density="xhdpi" foreground="res/android/icon/xhdpi_1618878029_7b32ee933929fe3ad84b.png" />
        <icon background="res/android/icon/xxhdpi_1618878029_7b32ee933929fe3ad84b.png" density="xxhdpi" foreground="res/android/icon/xxhdpi_1618878029_7b32ee933929fe3ad84b.png" />
        <icon background="res/android/icon/xxxhdpi_1618878029_7b32ee933929fe3ad84b.png" density="xxxhdpi" foreground="res/android/icon/xxxhdpi_1618878029_7b32ee933929fe3ad84b.png" />

        <splash src="res/android/screen/hdpi_port_1618878516_72cf4981d878b6dc8d73.png" density="port-hdpi" />
        <splash src="res/android/screen/ldpi_port_1618878516_72cf4981d878b6dc8d73.png" density="port-ldpi" />
        <splash src="res/android/screen/mdpi_port_1618878516_72cf4981d878b6dc8d73.png" density="port-mdpi" />
        <splash src="res/android/screen/xhdpi_port_1618878516_72cf4981d878b6dc8d73.png" density="port-xhdpi" />
        <splash src="res/android/screen/hdpi_land_1618878516_72cf4981d878b6dc8d73.png" density="land-hdpi" />
        <splash src="res/android/screen/ldpi_land_1618878516_72cf4981d878b6dc8d73.png" density="land-ldpi"/>
        <splash src="res/android/screen/mdpi_land_1618878516_72cf4981d878b6dc8d73.png" density="land-mdpi"/>
        <splash src="res/android/screen/xhdpi_land_1618878516_72cf4981d878b6dc8d73.png" density="land-xhdpi"/>
    </platform>

    <access origin='*'/>
    <plugin name='cordova-plugin-whitelist' />
    <allow-intent href='http://*/*'/>
    <allow-intent href='https://*/*'/>
    <allow-intent href='tel:*'/>
    <allow-intent href='sms:*'/>
    <allow-intent href='mailto:*'/>
    <allow-intent href='geo:*'/>

</widget>